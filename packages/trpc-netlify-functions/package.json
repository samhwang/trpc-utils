{
  "name": "trpc-netlify-functions",
  "version": "0.4.0",
  "description": "An adapter to run tRPC Server on Netlify Functions",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "ci": "rome ci ./src/**.ts",
    "lint": "rome check ./src/**.ts",
    "lint:fix": "rome check --apply ./src/**.ts",
    "lint:fix:unsafe": "rome check --apply-unsafe ./src/**.ts",
    "format": "rome format --write ./src/**.ts",
    "typecheck": "tsc",
    "release": "pnpm run build && changeset publish"
  },
  "keywords": [
    "trpc",
    "netlify",
    "typescript"
  ],
  "author": "Sam Huynh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/samhwang/trpc-netlify-functions.git"
  },
  "peerDependencies": {
    "@netlify/functions": "^1.3.0",
    "@trpc/server": "^10.14.0"
  },
  "devDependencies": {}
}
